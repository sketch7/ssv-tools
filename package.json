{
  "name": "@ssv/tools",
  "version": "0.6.5",
  "description": "tools and utilities used for builds and develop sketch7 (ssv) libraries.",
  "keywords": [
    "sketch7",
    "tools",
    "build",
    "utils"
  ],
  "scripts": {
    "start": "npm run watch",
    "watch": "tsc -p tsconfig.json -w",
    "lint": "tslint --project tsconfig.json -t stylish",
    "prebuild": "rimraf dist && npm run lint",
    "build": "tsc -p tsconfig.json",
    "magic-publish": "git checkout master && git pull && git merge develop && git push && npm run build && npm version minor && npm publish && git push --follow-tags && git checkout develop && git merge master && git push"
  },
  "author": "Stephen Lautier <stephen.lautier@outlook.com>",
  "license": "MIT",
  "main": "dist/commonjs/index.js",
  "typings": "dist/commonjs/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/sketch7/ssv-tools"
  },
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/gulp": "^4.0.2",
    "@types/node": "^7.0.0",
    "gulp": "^3.9.1",
    "require-dir": "^0.3.1",
    "rimraf": "^2.5.4",
    "tslint": "^5.0.0",
    "yargs": "^7.0.2"
  },
  "dependencies": {
    "@speedy/build-tools": "^0.3.0",
    "chalk": "^1.1.3",
    "cross-spawn-promise": "^0.10.1",
    "rollup": "^0.41.6",
    "simple-git": "^1.69.0",
    "typescript": "^2.2.0"
  },
  "peerDependencies": {
    "gulp": "^3.9.1"
  }
}
